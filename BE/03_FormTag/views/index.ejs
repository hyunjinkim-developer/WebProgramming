<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Form Tag</title>
  </head>
  <body>
    <!-- Send variable from server to front-->
    <h1><%= title %></h1>
    <div><%= name %></div>

    <h2>Get request</h2>
    <form action="/getForm" name="login1" method="get" class="get-form">
      <input type="text" name="id" placeholder="ID" />
      <input type="password" name="pw" placeholder="PW" />
      <button type="submit">Submit</button>
    </form>

    <h2>Post request</h2>
    <form action="/postForm" name="login2" method="post" class="post-form">
      <input type="text" name="id" placeholder="ID" />
      <input type="password" name="pw" placeholder="PW" />
      <button type="submit">Submit</button>
    </form>

    <script>
      // Show log in browser console
      console.log("HTML script log");

      // Select form using name attribute
      console.log(document.forms["login1"]);
      console.log(document.forms["login2"]);

      // Select form using class
      console.log(document.querySelector(".get-form"));
      console.log(document.querySelector(".post-form"));
    </script>
  </body>
</html>
